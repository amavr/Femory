<?xml version="1.0" encoding="utf-8"?>

<!-- Атрибут android:opacity=”opaque” крайне важен для предотвращения черных миганий при переходе к вашей теме -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="transparent">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

    <item
        android:width="300dp"
        android:height="320dp"
        android:gravity="center" >
        <layer-list>
            <item
                android:width="220dp"
                android:height="220dp"
                android:drawable="@drawable/ic_femory_foreground"
                android:gravity="top|center" />

            <item
                android:width="200dp"
                android:height="200dp"
                android:drawable="@drawable/ic_name"
                android:gravity="bottom|center" />
        </layer-list>
    </item>

</layer-list>